#!/bin/sh
#
# watcher

usage() {
    base=$(basename "$0")

    cat >&2 << EOF
Usage:
    $base
EOF

    [ $# -eq 0 ] || exit "$1"
}

debug() {
    wew | while read -r ev wid; do
        NAME="$(atomx WM_NAME "$wid")"
        CLASS="$(atomx WM_CLASS "$wid")"

        echo "$ev" "$wid" "$NAME" "$CLASS"
    done
}

# add delay and to execute in the background
addgroup() {
    sleep 2

    # test if window has appeared and add to group
    wattr m "$wid" && group -a "$1" "$2"
}

main() {
    . fwmrc
    wmenv
    wmgaps

    wew | while read -r ev wid; do
        case "$ev" in
            CREATE)
                NAME="$(atomx WM_NAME "$wid")"
                CLASS="$(atomx WM_CLASS "$wid")"

                if wattr o "$wid"; then
                    case "$CLASS" in
                        lemonbar)
                            chwso -l "$wid"
                            ;;
                    esac
                fi

                if ! wattr o "$wid"; then
                    # autogroups
                    [ -f "$autogroup" ] && {
                        while read -r line; do
                            group=${line% *}
                            class=${line#* }

                            [ "$class" = "$CLASS" ] && {
                                addgroup "$group" "$wid" &
                                break
                            }
                        done < "$autogroup"
                    }

                    # position
                    case "$CLASS" in
                        qutebrowser)
                            [ "$(wattr xywh "$wid")" = "50 50 800 600" ] && {
                                wrs 200 200 "$wid"
                                move center "$wid" "$(lsm -p)"
                            }
                            ;;
                        gl)
                            sleep 0.22
                            ;;
                        discord|Steam)
                            chwb -s "$BW" -c "$INACTIVE" "$wid"
                            chwso -l "$wid"
                            continue
                            ;;
                        ?idair*)
                            move full "$wid" "$(lsm -p)"
                            chwso -r "$wid"
                            continue
                            ;;
                        resolve)
                            move center "$wid" "$(lsm -p)"
                            chwso -r "$wid"
                            continue
                            ;;
                        python3|DiscordCanary)
                            move center "$wid"
                            ;;
                        ripcord)
                            case "$NAME" in
                                Preferences) move center "$wid"   ;;
                                *Voice*)     move center "$wid"   ;;
                                Upload)      move center "$wid"   ;;
                                *)           wmv -a $(wmp) "$wid" ;;
                            esac
                            ;;
                        urxvt)
                            case "$NAME" in
                                "calender")
                                    move -bl "$wid" "$PRI"
                                    ;;
                                "cava"|"volbar")
                                    move -br "$wid" "$PRI"
                                    ;;
                            esac

                            wmv -a $(wmp) "$wid"
                            ;;
                        *)
                            wmv -a $(wmp) "$wid"
                            ;;
                    esac

                    focus -w "$wid" nojump
                fi
                ;;
            UNMAP|DESTROY)
                # add way to retrieve group id that wid belonged to
                    atomx -d GROUP_"$2" "$(lsw -r)"
                ;;
            ENTER)
                if [ "$wid" != "$(pfw 2> /dev/null)" ]; then
                    wattr o "$wid" || focus -w "$wid" nojump
                fi
                ;;
        esac
    done
}

autogroup="$HOME/.autogroup"

case "$1" in
    -d|debug) debug ;;
esac

main "$@"
