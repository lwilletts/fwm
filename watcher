#!/bin/sh
#
# watcher

event() {
    . fwmrc
    wmenv

    wew | while IFS=: read -r ev wid; do
        case "$ev" in
            16) # create window
                wattr o "$wid" | {
                    # wmgroups
                    while read -r line; do
                        name="$(name "$wid")"
                        class="$(printf '%s\n' "$line" | cut -d\  -f 1)"

                        test "$name" = "$class" && {
                            group="$(printf '%s\n' "$line" | cut -d\  -f 2)"
                            group -a "$group" "$wid"
                        }
                    done < "$HOME/.autogroup"

                    case "$(class "$wid")" in
                        steam_app_*)
                            pkill compton
                            printf '%s\n' "$wid" >> "$fwmdir/compton"
                            ;;
                    esac
                }
                ;;
            17) # destroy window
                full -c "$wid"
                group -c "$wid"

                grep -q "$wid" "$fwmdir/compton" > /dev/null 2>&1 && {
                    pgrep compton > /dev/null 2>&1 || compton &
                    cleaned="$(grep -v "$wid" "$fwmdir/compton")"
                    printf '%s' "$cleaned" > "$fwmdir/compton"
                }
                ;;
            18) # unmap window
                ;;
            19) # map window
                ;;
        esac
    done
}

event
