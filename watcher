#!/bin/sh
#
# watcher

event() {
    . fwmrc
    wmenv
    wmgaps

    wew | while read -r ev wid args; do
        case "$ev" in
            CREATE)
                wattr o "$wid" || {
                    case "$(atomx WM_CLASS "$wid")" in
                        # fix for qutebrowser fixed position
                        qutebrowser)
                            for window in $(lsw | grep -v "$wid"); do
                                atomx WM_CLASS "$window"
                            done | grep -q "qutebrowser" && {
                                move center "$(pfw)" "$PRI"
                            }
                            ;;
                    esac

                    # autogroups
                    while read -r line; do
                        class="$(atomx WM_CLASS "$wid")"
                        matchedClass="$(printf '%s\n' "$line" | cut -d\  -f 1)"

                        test "$class" = "$matchedClass" && {
                            group="$(printf '%s\n' "$line" | cut -d\  -f 2)"
                            group -a "$group" "$wid"
                        }
                    done < "$HOME/.autogroup"
                }
                ;;
            DESTROY)
                full -c "$wid"
                group -c "$wid"
                ;;
        esac
    done
}

event
