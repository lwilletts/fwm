#!/bin/sh
#
# watcher

usage() {
    base=$(basename "$0")

    cat >&2 << EOF
Usage:
    $base
EOF

    [ $# -eq 0 ] || exit "$1"
}

# add delay and to execute in the background
addgroup() {
    sleep 2

    # test if window has appeared and add to group
    wattr m "$wid" && group -a "$1" "$2"
}

main() {
    . fwmrc
    wmenv
    wmgaps

    wew | while read -r ev wid; do
        case "$ev" in
            CREATE)
                NAME="$(atomx WM_NAME "$wid")"
                CLASS="$(atomx WM_CLASS "$wid")"

                wattr o "$wid" && {
                    case "$CLASS" in
                        lemonbar)
                            chwso -l "$wid"
                            ;;
                    esac
                } || {
                    # autogroups
                    [ -f "$autogroup" ] && {
                        while read -r line; do
                            group=${line% *}
                            class=${line#* }

                            [ "$class" = "$CLASS" ] && {
                                addgroup "$group" "$wid" &
                                break
                            }
                        done < "$autogroup"
                    }

                    # position
                    case "$CLASS" in
                        qutebrowser)
                            [ "$(wattr xywh "$wid")" = "50 50 800 600" ] && {
                                wrs 200 200 "$wid"
                                move center "$wid" "$(lsm -p)"
                            }
                            ;;
                        discord|Steam)
                            chwb -s "$BW" -c "$DIM" "$PFW"
                            chwso -l "$wid"
                            continue
                            ;;
                        ?idair*)
                            move full "$wid" "$(lsm -p)"
                            chwso -l "$wid"
                            continue
                            ;;
                        resolve)
                            move center "$wid" "$(lsm -p)"
                            chwso -r "$wid"
                            continue
                            ;;
                        python3|DiscordCanary)
                            move center "$wid"
                            ;;
                        ripcord)
                            case "$NAME" in
                                Preferences) move center "$wid"   ;;
                                *Voice*)     move center "$wid"   ;;
                                Upload)      move center "$wid"   ;;
                                *)           wmv -a $(wmp) "$wid" ;;
                            esac
                            ;;
                        gl)
                            sleep 0.2
                            ;;
                        *)
                            wmv -a $(wmp) "$wid"
                            ;;
                    esac

                    focus -w "$wid" nojump
                }
                ;;
            DESTROY)
                # focus window underneath pointer if window is deleted
                under > /dev/null && focus -w "$(under)"
                ;;

            ENTER)
                wattr o "$wid" || focus -w "$wid" nojump
                ;;
        esac
    done
}

autogroup="$HOME/.autogroup"

main "$@"
