#!/bin/sh
#
# watcher

event() {
    . fwmrc
    wmenv

    wew | while read -r ev wid args; do
        case "$ev" in
            CREATE)
                wattr o "$wid" | {
                    sleep 0.1
                    lsw | grep -q "$wid" && {
                        test ! -e "$xrect" && {
                            X="$(($(wmp | cut -d\  -f 1) + BW))"
                            Y="$(($(wmp | cut -d\  -f 2) + BW))"
                            wmv -a "$X" "$Y" "$wid"
                            focus -w "$wid"
                        } || {
                            rm "$xrect"
                        }
                    }

                    # wmgroups
                    while read -r line; do
                        name="$(name "$wid")"
                        class="$(printf '%s\n' "$line" | cut -d\  -f 1)"

                        test "$name" = "$class" && {
                            group="$(printf '%s\n' "$line" | cut -d\  -f 2)"
                            group -a "$group" "$wid"
                        }
                    done < "$HOME/.autogroup"

                    case "$(class "$wid")" in
                        steam_app_*)
                            pkill picom
                            printf '%s\n' "$wid" >> "$fwmdir/picom"
                            ;;
                    esac
                }
                ;;
            DESTROY)
                full -c "$wid"
                group -c "$wid"

                grep -q "$wid" "$fwmdir/picom" > /dev/null 2>&1 && {
                    pgrep picom > /dev/null 2>&1 || compton &
                    cleaned="$(grep -v "$wid" "$fwmdir/picom")"
                    printf '%s' "$cleaned" > "$fwmdir/picom"
                }
                ;;
            ENTER)
                lsw | grep -q "$wid" && {
                    focus -w "$wid" "disable"
                }
                ;;
            MAP)   ;;
            UNMAP) ;;
        esac
    done
}

event
