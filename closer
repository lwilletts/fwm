#!/bin/sh
# shellcheck disable=SC2015
#
# closer

usage() {
    base="$(basename "$0")"

    cat >&2 << EOF
Usage:
    $ $base -u | up    : Focus next window up.
    $ $base -l | left  : Focus next window left.
    $ $base -d | down  : Focus next window down.
    $ $base -r | right : Focus next window right.
    $ $base -h | help  : Show this help.
EOF

    test $# -eq 0 || exit "$1"
}

windowUp() {
    test "$PFW" = "0x00000000" && {
        mouseY="$(wmp -r | cut -d\  -f 2)"
        printf '%s\n' "$slsw" | (xargs wattr yi; printf '%s\n' "$mouseY") | sort -nr | \
            sed -n "/$mouseY/{n;p}" | cut -d\  -f 2
    } || {
        printf '%s\n' "$slsw" | xargs wattr yi | sort -nr | sed -n "/$PFW/{n;p}" | cut -d\  -f 2
    }
}

windowDown() {
    test "$PFW" = "0x00000000" && {
        mouseY="$(wmp -r | cut -d\  -f 2)"
        printf '%s\n' "$slsw" | (xargs wattr yi; printf '%s\n' "$mouseY") | sort -n | \
            sed -n "/$mouseY/{n;p}" | cut -d\  -f 2
    } || {
        printf '%s\n' "$slsw" | xargs wattr yi | sort -n | sed -n "/$PFW/{n;p}" | cut -d\  -f 2
    }
}

windowLeft() {
    test "$PFW" = "0x00000000" && {
        mouseX="$(wmp -r | cut -d\  -f 1)"
        printf '%s\n' "$slsw" | (xargs wattr xi; printf '%s\n' "$mouseX") | sort -nr | \
            sed -n "/$mouseX/{n;p}" | cut -d\  -f 2
    } || {
        printf '%s\n' "$slsw" | xargs wattr xi | sort -nr | sed -n "/$PFW/{n;p}" | cut -d\  -f 2
    }
}

windowRight() {
    test "$PFW" = "0x00000000" && {
        mouseX="$(wmp -r | cut -d\  -f 1)"
        printf '%s\n' "$slsw" | (xargs wattr xi; printf '%s\n' "$mouseX") | sort -n | \
            sed -n "/$mouseX/{n;p}" | cut -d\  -f 2
    } || {
        printf '%s\n' "$slsw" | xargs wattr xi | sort -n | sed -n "/$PFW/{n;p}" | cut -d\  -f 2
    }
}


main() {
    . fwmrc

    PFW="$(pfw 2> /dev/null || printf '%s\n' "0x00000000")"

    slsw="$(listwindows)"

    case "$1" in
        -u|--up|up)       focus --wid "$(windowUp)"    ;;
        -d|--down|down)   focus --wid "$(windowDown)"  ;;
        -l|--left|left)   focus --wid "$(windowLeft)"  ;;
        -r|--right|right) focus --wid "$(windowRight)" ;;
        -h|--help|help)   usage 0                      ;;
        *)                usage 1                      ;;
    esac
}

main "$@"
