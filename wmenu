#!/bin/sh
# shellcheck disable=SC2015
#
# wmenu

usage() {
    base="$(basename "$0")"

    cat >&2 << EOF
Usage:
    $ $base -b | bar <-au>    : Show as a bar on primary screen.
    $ $base -m | menu <-au>   : Show as a window.
    $ $base -c | center <-au> : Show as a window center of primary screen.
    $ $base -h | help         : Show this help.
EOF

    test $# -eq 0 || exit "$1"
}

width() {
    ps=$(txtw -f "$FONT" "$PROMPT")
    char="$(output | wc -L)"
    W=$(echo "($ps + $char * 4.9 + 8) / 1" | bc)
}

output() {
    for wid in $($LSWCMD); do
        printf '%s\n' "$wid $(atomx WM_CLASS "$wid") | $(wname "$wid")"
    done | grep -v "$PFW"
}

selection() {
    output | sort -rk 2 | \
        dmenu -name "$(basename "$0")" -f -l "$nWindows" -i -fn "$FONT" -p "$PROMPT" \
        -nf "#$ACTIVE" -sf "#$INACTIVE" -nb "#$INACTIVE" -sb "#$ACTIVE" -bc "#$ACTIVE" \
        -s "$(mattr d "$PFM")" -x "$X" -y "$Y" -w "$W" -h "$FH" -bw "$BW" | \
        cut -d\  -f 1
}

menu() {
    width

    # menu geometry
    X0="$(mattr x "$PFM")"
    Y0="$(mattr y "$PFM")"
    X=$(($(wmp | cut -d\  -f 1) - X0 - 25))
    Y=$(($(wmp | cut -d\  -f 2) - Y0 - 25))
}

center() {
    width
    H=$((nWindows * FH))

    # finding x y cords for centering
    if [ "$PFW" = "0x00000000" ]; then
        X=$(($(mattr w "$PFM")/2 - W/2 - 10))
        Y=$(($(mattr h "$PFM")/2 - H/2 - 10))
    else
        X0="$(mattr x "$PFM")"
        Y0="$(mattr y "$PFM")"
        X=$(($(wattr x "$PFW") + $(wattr w "$PFW")/2 - W/2 - 10 - X0))
        Y=$(($(wattr y "$PFW") + $(wattr h "$PFW")/2 - H/2 - 10 - Y0))

        # move mouse to middle of window
        wmp -a $(($(wattr x "$PFW") + $(wattr w "$PFW") / 2)) \
               $(($(wattr y "$PFW") + $(wattr h "$PFW") / 2))
    fi
}

bar() {
    X=$((LGAP + BW))
    W=$(($(mattr w "$PRI") - LGAP - RGAP - BW*2))
    Y=$(($(mattr h "$PRI") - FH * (nWindows + 1) - BGAP - BW*2))

    wmp -a "$((X + 40))" "$(($(mattr y "$PRI") + Y + 20))"
}

main() {
    . fwmrc
    wmenv
    wmgaps
    wmcolours

    PFM="$(pfm)"
    FONT=$(awk '/font/ {print $3}' < ~/.Xresources | cut -d',' -f 1)
    FH=15
    PROMPT=" Window >"

    case "$2" in
        -a|all) LSWCMD="lsw -a" ;;
        -u|hid) LSWCMD="lsw -u" ;;
        *)      LSWCMD="lsw"    ;;
    esac

    nWindows=$($LSWCMD | grep -cv "$PFW")
    test "$nWindows" -eq 0 && exit 1

    case "$1" in
        -b|bar)    bar     ;;
        -m|menu)   menu    ;;
        -c|center) center  ;;
        -h|help)   usage 0 ;;
        *)         usage 1 ;;
    esac

    focus -w "$(selection)"
}

main "$@"
