#!/bin/sh
# shellcheck disable=SC2015
#
# wmenu

usage() {
    base="$(basename "$0")"

    cat >&2 << EOF
Usage:
    $ $base -b | bar <-a|-u>    : Show as a bar.
    $ $base -m | menu <-a|-u>   : Show as a floating window.
    $ $base -c | center <-a|-u> : Show as a floating window center of screen.
    $ $base -h | help           : Show this help.
EOF

    test $# -eq 0 || exit "$1"
}

width() {
    ps=$(txtw -f "$FONT" "$PROMPT")
    char="$(output | wc -L)"
    W=$(echo "($ps + $char * 4.9) / 1" | bc)
}

output() {
    for wid in $($LSWCMD); do
        printf '%s\n' "$wid $(atomx WM_CLASS "$wid") | $(wname "$wid")"
    done
}

selection() {
    output | sort -rk 2 | \
        dmenu -name "wmenu" -f -l "$nWindows" -i -fn "$FONT" -p "$PROMPT" \
        -nf "#$ACTIVE" -sf "#$INACTIVE" -nb "#$INACTIVE" -sb "#$URGENT" -bc "#$ACTIVE" \
        -s "$(mattr d "$PFM")" -x "$X" -y "$Y" -w "$W" -bw "$BW" | cut -d\  -f 1
}

menu() {
    width

    # CWM-like right click
    X=$(($(wmp | cut -d\  -f 1) - $(mattr x "$PFM") - 10))
    Y=$(($(wmp | cut -d\  -f 2) - $(mattr y "$PFM") - 10))
}

center() {
    width
    H=$(echo "($nWindows * 11.5) / 1" | bc)

    # finding x y cords for centering
    X=$(($(mattr w "$PFM")/2 - W/2 - 10))
    Y=$(($(mattr h "$PFM")/2 - H/2 - 10))
}

bar() {
    X=$((LGAP + BW))
    H=$((TGAP/2 + BW*2))
    Y=$((H - TGAP/4))
    W=$(($(mattr w $PRI) - LGAP - RGAP - BW*2))
}

main() {
    . fwmrc
    wmenv
    wmgaps
    wmcolours

    FONT=$(awk '/font/ {print $3}' < ~/.Xresources | cut -d',' -f 1)
    PROMPT="  Window >"

    case "$2" in
        -a|all) LSWCMD="lsw -a" ;;
        -u|hid) LSWCMD="lsw -u" ;;
        *)      LSWCMD="lsw"    ;;
    esac

    nWindows=$($LSWCMD | wc -l)
    test "$nWindows" -eq 0 && exit 1

    case "$1" in
        -b|bar)    bar     ;;
        -m|menu)   menu    ;;
        -c|center) center  ;;
        -h|help)   usage 0 ;;
        *)         usage 1 ;;
    esac

    focus -w "$(selection)"
}

main "$@"
