#!/bin/sh
# shellcheck disable=SC2015
#
# wmenu

usage() {
    base="$(basename "$0")"

    cat >&2 << EOF
Usage:
    $ $base -b | bar <-a|-u>    : Show as a bar on primary screen.
    $ $base -m | menu <-a|-u>   : Show as a floating window.
    $ $base -c | center <-a|-u> : Show as a floating window center of primary screen.
    $ $base -h | help           : Show this help.
EOF

    test $# -eq 0 || exit "$1"
}

width() {
    ps=$(txtw -f "$FONT" "$PROMPT")
    char="$(output | wc -L)"
    W=$(echo "($ps + $char * 4.9 + 8) / 1" | bc)
}

output() {
    for wid in $($LSWCMD); do
        printf '%s\n' "$wid $(atomx WM_CLASS "$wid") | $(wname "$wid")"
    done | grep -v "$PFW"
}

selection() {
    output | sort -rk 2 | \
        dmenu -name "wmenu" -f -l "$nWindows" -i -fn "$FONT" -p "$PROMPT" \
        -nf "#$ACTIVE" -sf "#$INACTIVE" -nb "#$INACTIVE" -sb "#$ACTIVE" -bc "#$ACTIVE" \
        -s "$(mattr d "$PRI")" -x "$X" -y "$Y" -w "$W" -h "$FH" -bw "$BW" | \
        cut -d\  -f 1
}

menu() {
    width

    # menu geometry fit to display
    SCR="$(pfm)"
    X0="$(mattr x "$SCR")"
    Y0="$(mattr y "$SCR")"
    X=$(($(wmp | cut -d\  -f 1) - X0))
    Y=$(($(wmp | cut -d\  -f 2) - Y0))

    H="$((FH * (nWindows + 1)))"

    test "$X" -lt "$LGAP" && X="$LGAP"
    test "$Y" -lt "$TGAP" && Y="$TGAP"

    Xboundary="$(($(mattr w "$SCR") - W - RGAP))"
    test "$X" -gt "$Xboundary" && X=$Xboundary

    Yboundary="$(($(mattr h "$SCR") - H - BGAP))"
    test "$Y" -gt "$Yboundary" && Y=$Yboundary

    wmp -a "$((X + X0 + 15))" "$((Y + Y0 + 20))"
}

center() {
    width
    H=$((nWindows * FH))

    # finding x y cords for centering
    X=$(($(mattr w "$PRI")/2 - W/2 - 10))
    Y=$(($(mattr h "$PRI")/2 - H/2 - 10))
}

bar() {
    X=$((LGAP + BW))
    W=$(($(mattr w "$PRI") - LGAP - RGAP - BW*2))
    Y=$(($(mattr h "$PRI") - FH * (nWindows + 1) - BGAP - BW*2))

    wmp -a "$((X + 40))" "$(($(mattr y "$PRI") + Y + 20))"
}

main() {
    . fwmrc
    wmenv
    wmgaps
    wmcolours

    FONT=$(awk '/font/ {print $3}' < ~/.Xresources | cut -d',' -f 1)
    PROMPT=" Window >"

    case "$2" in
        -a|all) LSWCMD="lsw -a" ;;
        -u|hid) LSWCMD="lsw -u" ;;
        *)      LSWCMD="lsw"    ;;
    esac

    FH=15
    nWindows=$($LSWCMD | grep -cv "$PFW")
    test "$nWindows" -eq 0 && exit 1

    case "$1" in
        -b|bar)    bar     ;;
        -m|menu)   menu    ;;
        -c|center) center  ;;
        -h|help)   usage 0 ;;
        *)         usage 1 ;;
    esac

    focus -w "$(selection)"
}

main "$@"
